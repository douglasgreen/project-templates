# version: 1.0.0
# modified: 2026-02-20

# AI
OPENAI_API_KEY="SECRET"
OPENROUTER_API_KEY="SECRET"

# Application
NODE_ENV=development
APP_ENV=development
APP_DEBUG=true
APP_PORT=3000
APP_URL=http://localhost:3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/myapp
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=5000

# Redis/Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security
JWT_SECRET=REPLACE_WITH_256_BIT_SECRET
BCRYPT_ROUNDS=12
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# API Keys (use secrets manager in production)
# EXTERNAL_API_KEY=<retrieve from vault>

# Feature Flags
FEATURE_NEW_DASHBOARD=false
FEATURE_BETA_API=false

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
