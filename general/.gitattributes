# Normalize line endings
* text=auto eol=lf

# PHP files
*.php text eol=lf

# SQL files
*.sql text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Documentation
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Prevent binary files from being modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
