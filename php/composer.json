{
    "name": "",
    "description": "",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93.1",
        "phpcompatibility/php-compatibility": "*",
        "phpstan/phpstan": "^2.1.38",
        "phpunit/phpunit": "^12.5.8",
        "rector/rector": "^2.3.5",
        "roave/security-advisories": "dev-latest",
        "shipmonk/dead-code-detector": "^0.13.5",
        "shipmonk/name-collision-detector": "^2.1.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.3"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": ["@build-assets"],
        "post-update-cmd": ["@build-assets"],
        "build-assets": [
            "npm install --no-save",
            "npm run build"
        ],
        "lint": [
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ],
        "test": ["phpunit"],
        "test:unit": ["phpunit --testsuite=Unit"],
        "test:integration": ["phpunit --testsuite=Integration"]
    }
}
