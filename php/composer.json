{
  "_version": "1.1.0",
  "_modified": "2026-02-22",
  "name": "owner/project",
  "description": "***",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.94.2",
    "phpstan/phpstan": "^2.1.39",
    "phpunit/phpunit": "^12.5.14",
    "rector/rector": "^2.3.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "8.3"
    },
    "sort-packages": true
  },
  "scripts": {
    "lint": [
      "php-cs-fixer fix --dry-run --verbose",
      "phpstan analyse",
      "rector process --dry-run"
    ],
    "lint:fix": [
      "php-cs-fixer fix",
      "rector process"
    ],
    "test": ["phpunit"],
    "test:unit": ["phpunit --testsuite=Unit"],
    "test:integration": ["phpunit --testsuite=Integration"],
    "qa": [
      "@lint",
      "@test"
    ]
  }
}
